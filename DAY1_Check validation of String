#include <stdio.h>
#include <string.h>

int main() {
    char inputString[50];
    int isValid = 1;

    printf("Enter a string: ");
    scanf("%s", inputString);

    for (int i = 0; i < strlen(inputString); i++) {
        if (!((inputString[i] >= 'a' && inputString[i] <= 'z') || (inputString[i] >= 'A' && inputString[i] <= 'Z'))) {
            isValid = 0;
            break;
        }
    }

    if (isValid) {
        printf("The string is valid.\n");
    } else {
        printf("The string is not valid.\n");
    }

    return 0;
}
